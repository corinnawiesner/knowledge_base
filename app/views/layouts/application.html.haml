!!!
%html
  %head
    %meta{ charset: "utf-8"}
    %meta{ name: "viewport", content: "width=device-width", "initial-scale" => "1.0" }

    %title= t('global.title')
    = csrf_meta_tags
    = csp_meta_tag

    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

  %body
    %nav.top-bar
      .top-bar-left
        %ul.menu
          %li.menu-text= link_to t('global.menu.title'), root_path
      .top-bar-right
        %ul.menu
          %li= link_to t('global.menu.new_article_link'), new_article_path

    .page-layout
      = yield
