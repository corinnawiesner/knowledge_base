%h1= t("questions.edit.headline")

- if flash[:error].present?
  .callout.alert
    %p= flash[:error]

= form_for @question_form, as: :question, url: article_question_path(@article, @question), method: :put do |f|
  = render "questions/partials/form", f: f

  .float-right
    = link_to t("global.cancel"), article_path(@article), class: "button alert"
    = f.button t("questions.edit.submit"), class: "button"
